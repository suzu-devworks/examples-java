<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.suzu_devworks.examples.persistence.entities">

    <class name="User" table="users">
        <id name="id" type="java.math.BigInteger">
            <generator class="identity" />
        </id>
        <property name="name" column="user_name" type="string" length="20" not-null="true" />
        <property name="email" type="string" length="100" />
        <property name="password" type="string" length="64" not-null="true">
            <column name="password" sql-type="char(64)" />
        </property>
    </class>

</hibernate-mapping>
