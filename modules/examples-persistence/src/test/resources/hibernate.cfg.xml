<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:im-db2;DB_CLOSE_DELAY=-1;</property>
        <property name="connection.username">user2</property>
        <property name="connection.password"></property>
        <property name="connection.pool_size">2</property>

        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <property name="physical_naming_strategy">
            com.github.suzu_devworks.examples.persistence.hibernate.CamelToSnakePhysicalNamingStrategy
            </property>
        <mapping resource="persistence/User.hbm.xml" />
        <mapping class="com.github.suzu_devworks.examples.persistence.entities.UserItem" />
        <mapping class="com.github.suzu_devworks.examples.persistence.entities.UserStatus" />

    </session-factory>

</hibernate-configuration>
